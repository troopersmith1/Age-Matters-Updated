<Patch>
    <Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

            <li Class="PatchOperationAdd">
                <xpath>/Defs/HediffGiverSetDef[
                    defName = "OrganicStandard" or
                    defName = "OrganicAgeless" or
                    defName = "WolverineX" or
                    defName = "OrganicKilhn" or
                    defName = "GhoulStandard" or
                    defName = "OrganicAvali"
                    ]/hediffGivers</xpath>
                <value>
                    <li Class="HediffGiver_RandomAgeCurved">
                        <hediff>Youth</hediff>
                        <partsToAffect>
                            <li>Torso</li>
                        </partsToAffect>
                        <ageFractionMtbDaysCurve>
                            <points>
                                <li>(0, 0.00001)</li>
                                <li>(0.05, 9999999999)</li>
                                <li>(0.6, 9999999999)</li>
                                <li>(1, 9999999999)</li>
                            </points>
                        </ageFractionMtbDaysCurve>
                    </li>
                </value>
            </li>
			
        </operations>
    </Operation>
</Patch>